# Development Dockerfile for Next.js app
# Optimized for hot-reloading and development workflow

FROM node:20-alpine

# Install dependencies for better development experience
RUN apk add --no-cache libc6-compat

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install all dependencies (including dev dependencies)
RUN pnpm install --frozen-lockfile

# Copy source code
COPY . .

# Expose port 3000 for Next.js dev server
EXPOSE 3000

# Set environment to development
ENV NODE_ENV=development

# Start the Next.js development server with hot reloading
CMD ["pnpm", "run", "dev"]
