# Development Dockerfile for Next.js app
# Optimized for hot-reloading and development workflow

FROM node:20-alpine

# Install dependencies for better development experience
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Expose port 3000 for Next.js dev server
EXPOSE 3000

# Set environment to development
ENV NODE_ENV=development

# Start the Next.js development server with hot reloading
CMD ["npm", "run", "dev"]
