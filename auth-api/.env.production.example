# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# Database Configuration
# Use a secure MongoDB connection string with authentication
MONGODB_URI=mongodb://username:password@your-mongodb-host:27017/easygenerator-auth?authSource=admin

# JWT Configuration
# Generate secure random strings using: openssl rand -base64 32
# IMPORTANT: Use different secrets for access and refresh tokens
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
PORT=3000
NODE_ENV=production

# Logging
# Use 'info' or 'warn' in production (not 'debug')
LOG_LEVEL=info

# CORS Configuration
# Replace with your actual frontend domain(s)
# For multiple origins, use comma-separated list: https://example.com,https://www.example.com
CORS_ORIGIN=https://your-frontend-domain.com

# MongoDB Credentials (for Docker deployment)
MONGO_USERNAME=admin
MONGO_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
MONGO_DATABASE=easygenerator-auth
